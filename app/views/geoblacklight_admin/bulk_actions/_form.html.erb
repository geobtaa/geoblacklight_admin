
<%= simple_form_for(@bulk_action) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name, hint: "Short description" %>
    <%= f.input :scope, hint: "Result Set Query", input_html: { value: params[:scope] } %>
    <%= f.input :field_name, collection: bulk_actions_collection, hint: "Field" %>
    <%= f.input :field_value, hint: "New Field Value" %>
    <%= f.input :notes, hint: "Longer description" %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, {class: 'btn btn-primary'} %>
  </div>
<% end %>
