<% if ENV["GBL_ADMIN_REFERENCES_MIGRATED"] == "true" %>
  <%- if @document.persisted? %>
    <h3 id="document-references"><%= link_to "References", admin_document_document_references_url(@document) %></h3>
    <table class="table table-striped table-bordered sortable">
    <thead class="thead-dark">
      <tr>
        <th class="header">Type</th>
        <th class="header">Value</th>
        <th class="header">Label</th>
      </tr>
    </thead>
    <tbody>
      <% @document.document_references.each do |document_reference| %>
        <tr>
          <td><%= document_reference.reference_type.name %></td>
          <td><%= document_reference.url %></td>
          <td><%= document_reference.label %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  <% end %>
<% end %>
